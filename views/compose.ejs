<%- include("partials/header") %>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" name="PostTitle" id="title" placeholder="Title">
    </div>
    <div class="mb-3">
        <label for="body" class="form-label">Post</label>
        <textarea class="form-control" name="postBody" id="body" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary" name="compose">Publish</button>
</form>

